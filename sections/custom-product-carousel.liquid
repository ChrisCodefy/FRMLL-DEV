{% assign product_count = section.settings.collection.products_count %}
<div class="custom-product-carousel" id="carousel-{{ section.id }}">
  <div class="title-container">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <div class="carousel-container">
    <div class="carousel-track" id="carousel-track-{{ section.id }}">
      {% if section.settings.collection %}
        {% assign products = section.settings.collection.products %}
        {% for product in products %}
          <div class="carousel-item">
            <a href="{{ product.url }}">
              <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}"
                   width="{{ section.settings.image_width }}" height="{{ section.settings.image_height }}"
                   style="width: {{ section.settings.image_width }}px; height: {{ section.settings.image_height }}px;">
              <div class="carousel-info">
                <strong>{{ product.title }}</strong><br>
                {% if product.price_varies %}
                  Desde {{ product.price | money }}
                {% else %}
                  {{ product.price | money }}
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      {% else %}
        <p>No se ha seleccionado ninguna colección.</p>
      {% endif %}
    </div>

    {% if product_count > 2 %}
      <div class="dots-and-arrows">
        <div class="dots" id="dots-{{ section.id }}"></div>
        <div class="arrows">
          <span class="arrow" onclick="moveSlide_{{ section.id }}(-1)" aria-label="Anterior">←</span>
          <span class="arrow" onclick="moveSlide_{{ section.id }}(1)" aria-label="Siguiente">→</span>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .custom-product-carousel {
    margin: 20px 0;
  }
  .title-container {
    text-align: center;
    margin-bottom: 20px;
  }
  .title-container h2 {
    font-size: 24px;
    color: #333;
  }
  .carousel-container {
    position: relative;
    overflow: hidden;
    padding: 40px 20px;
    background: #f5f3eb;
  }
  .carousel-track {
    display: flex;
    transition: transform 0.4s ease-in-out;
  }
  .carousel-item {
    min-width: 40%;
    margin-right: 20px;
    background: white;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    padding: 20px;
  }
  .carousel-item img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px;
    aspect-ratio: 1/1;
  }
  .carousel-info {
    margin-top: 10px;
  }
  .dots-and-arrows {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
  }
  .dots {
    display: flex;
    gap: 5px;
  }
  .dot {
    width: 10px;
    height: 10px;
    background: #bbb;
    border-radius: 50%;
    cursor: pointer;
  }
  .dot.active {
    background: #333;
  }
  .arrows {
    display: flex;
    gap: 10px;
  }
  .arrow {
    cursor: pointer;
    font-size: 20px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sectionId = '{{ section.id }}';
    const track = document.getElementById('carousel-track-' + sectionId);
    const dotsContainer = document.getElementById('dots-' + sectionId);
    const items = track.querySelectorAll('.carousel-item');
    const itemsToShow = 2.5;
    const totalSlides = Math.ceil(items.length - itemsToShow + 1);
    let currentSlide = 0;

    function updateCarousel() {
      const slideWidth = items[0].offsetWidth + 20;
      track.style.transform = `translateX(-${currentSlide * slideWidth}px)`;

      const dots = dotsContainer.querySelectorAll('.dot');
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentSlide);
      });
    }

    window['moveSlide_' + sectionId] = function (direction) {
      currentSlide += direction;
      if (currentSlide < 0) currentSlide = 0;
      if (currentSlide >= totalSlides) currentSlide = totalSlides - 1;
      updateCarousel();
    };

    // Crear los dots
    for (let i = 0; i < totalSlides; i++) {
      const dot = document.createElement('div');
      dot.classList.add('dot');
      if (i === 0) dot.classList.add('active');
      dot.addEventListener('click', () => {
        currentSlide = i;
        updateCarousel();
      });
      dotsContainer.appendChild(dot);
    }
  });
</script>

{% schema %}
{
  "name": "Carrusel de productos",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título del carrusel",
      "default": "Carrusel de productos"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Colección de productos"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Ancho de las imágenes (px)",
      "min": 100,
      "max": 1000,
      "step": 10,
      "default": 600
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Alto de las imágenes (px)",
      "min": 100,
      "max": 1000,
      "step": 10,
      "default": 600
    }
  ],
  "presets": [
    {
      "name": "Carrusel de productos"
    }
  ]
}
{% endschema %}
