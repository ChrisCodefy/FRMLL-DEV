{% schema %}
{
  "name": "Custom Subscription Tabs",
  "tag": "section",
  "class": "custom-subscription-tabs-columns",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "RECEIVE SPECIAL OFFERS AND FIRST LOOK AT NEW PRODUCTS."
    },

    { "type": "textarea", "id": "mexico_col_1", "label": "México - Columna 1" },
    { "type": "textarea", "id": "mexico_col_2", "label": "México - Columna 2" },
    { "type": "textarea", "id": "mexico_col_3", "label": "México - Columna 3" },
    { "type": "textarea", "id": "mexico_col_4", "label": "México - Columna 4" },

    { "type": "textarea", "id": "usa_col_1", "label": "USA - Column 1" },
    { "type": "textarea", "id": "usa_col_2", "label": "USA - Column 2" },
    { "type": "textarea", "id": "usa_col_3", "label": "USA - Column 3" },
    { "type": "textarea", "id": "usa_col_4", "label": "USA - Column 4" }
  ],
  "presets": [
    {
      "name": "Custom Subscription Tabs Columns"
    }
  ]
}
{% endschema %}

<div class="subscription-tabs-header">
  <div class="title">{{ section.settings.title }}</div>
  <div class="tab-switch">
    <button class="tab-button active" data-tab="mexico">México</button>
    <button class="tab-button" data-tab="usa">Estados Unidos</button>
  </div>
</div>

<div class="tab-columns tab-mexico active">
  <div class="column">{{ section.settings.mexico_col_1 | newline_to_br }}</div>
  <div class="column">{{ section.settings.mexico_col_2 | newline_to_br }}</div>
  <div class="column">{{ section.settings.mexico_col_3 | newline_to_br }}</div>
  <div class="column">{{ section.settings.mexico_col_4 | newline_to_br }}</div>
</div>

<div class="tab-columns tab-usa">
  <div class="column">{{ section.settings.usa_col_1 | newline_to_br }}</div>
  <div class="column">{{ section.settings.usa_col_2 | newline_to_br }}</div>
  <div class="column">{{ section.settings.usa_col_3 | newline_to_br }}</div>
  <div class="column">{{ section.settings.usa_col_4 | newline_to_br }}</div>
</div>

<style>
.subscription-tabs-header {
  background-color: #66ff5c;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  text-transform: uppercase;
  font-weight: bold;
  flex-wrap: wrap;
}
.subscription-tabs-header .title {
  font-size: 16px;
}
.tab-switch {
  display: flex;
  gap: 10px;
}
.tab-button {
  background: none;
  border: none;
  padding: 10px 20px;
  font-weight: bold;
  cursor: pointer;
  border-bottom: 2px solid transparent;
}
.tab-button.active {
  border-bottom: 2px solid black;
}
.tab-columns {
  display: none;
  grid-template-columns: repeat(4, 1fr);
  border-top: 1px solid black;
  border-bottom: 1px solid black;
}
.tab-columns.active {
  display: grid;
}
.column {
  padding: 20px;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
  background: #f5f5f0;
}
.column:last-child {
  border-right: none;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const buttons = document.querySelectorAll(".tab-button");
  const mexicoTab = document.querySelector(".tab-mexico");
  const usaTab = document.querySelector(".tab-usa");

  buttons.forEach(button => {
    button.addEventListener("click", () => {
      buttons.forEach(btn => btn.classList.remove("active"));
      button.classList.add("active");

      if (button.dataset.tab === "mexico") {
        mexicoTab.classList.add("active");
        usaTab.classList.remove("active");
      } else {
        usaTab.classList.add("active");
        mexicoTab.classList.remove("active");
      }
    });
  });
});
</script>
