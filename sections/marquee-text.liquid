{% schema %}
{
  "name": "Cintilla de texto",
  "settings": [
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Texto de la cintilla",
      "default": "TEXTO DE EJEMPLO EN MOVIMIENTO"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#66ff66"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Velocidad",
      "min": 5,
      "max": 30,
      "step": 1,
      "default": 15
    }
  ],
  "presets": [
    {
      "name": "Cintilla de texto"
    }
  ]
}
{% endschema %}

<style>
.marquee-container {
  background: {{ section.settings.background_color }};
  overflow: hidden;
  white-space: nowrap;
  width: 100%;
  padding: 10px 0;
}
.marquee-text {
  display: inline-block;
  color: {{ section.settings.text_color }};
  font-size: 2rem;
  font-weight: bold;
  animation: marquee {{ animation_duration }}s linear infinite;
}
@keyframes marquee {
  0% { transform: translateX(100%);}
  100% { transform: translateX(-100%);}
}
</style>

<div class="marquee-container">
  <span class="marquee-text">
    {{ section.settings.marquee_text }}
  </span>
</div>

{% assign animation_duration = 40 | minus: section.settings.speed %}
