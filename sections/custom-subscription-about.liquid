{% schema %}
{
  "name": "Custom Subscription About",
  "tag": "section",
  "class": "custom-subscription-about",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "ABOUT OUR SUBSCRIPTION"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "JOIN OUR SUBSCRIPTION PROGRAM AND DISCOVER A CURATED SELECTION OF ARTWORK DELIVERED STRAIGHT TO YOUR DOOR..."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f5f5f0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading font size (desktop, px)",
      "min": 20,
      "max": 80,
      "step": 2,
      "default": 60
    },
    {
      "type": "range",
      "id": "heading_font_size_mobile",
      "label": "Heading font size (mobile, px)",
      "min": 14,
      "max": 40,
      "step": 1,
      "default": 28
    },
    {
      "type": "range",
      "id": "text_font_size",
      "label": "Text font size (desktop, px)",
      "min": 12,
      "max": 32,
      "step": 1,
      "default": 20
    },
    {
      "type": "range",
      "id": "text_font_size_mobile",
      "label": "Text font size (mobile, px)",
      "min": 10,
      "max": 24,
      "step": 1,
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Custom Subscription About"
    }
  ]
}
{% endschema %}

<section class="custom-subscription-about-wrapper" style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    <h2 
      class="subscription-heading" 
      style="font-size: {{ section.settings.heading_font_size }}px;"
    >
      {{ section.settings.heading }}
    </h2>
    <p 
      class="subscription-text" 
      style="font-size: {{ section.settings.text_font_size }}px; color: {{ section.settings.text_color }};"
    >
      {{ section.settings.content | newline_to_br }}
    </p>
  </div>
</section>

<style>
  .custom-subscription-about-wrapper {
    padding: 40px 20px;
  }

  .subscription-heading {
    font-weight: 800;
    margin-bottom: 30px;
    text-transform: uppercase;
    word-break: break-word;
  }

  .subscription-text {
    font-weight: 600;
    line-height: 1.6;
    text-transform: uppercase;
    word-break: break-word;
  }

  @media screen and (max-width: 768px) {
    .subscription-heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px !important;
    }

    .subscription-text {
      font-size: {{ section.settings.text_font_size_mobile }}px !important;
    }
  }
</style>
