{% schema %}
{
  "name": "Custom Subscription About",
  "tag": "section",
  "class": "custom-subscription-about",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "ABOUT OUR SUBSCRIPTION"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "JOIN OUR SUBSCRIPTION PROGRAM AND DISCOVER A CURATED SELECTION OF ARTWORK DELIVERED STRAIGHT TO YOUR DOOR. OUR MEMBERS ENJOY EXCLUSIVE ACCESS TO NEW COLLECTIONS, ARTIST STORIES, AND BEHIND-THE-SCENES CONTENT. WHETHER YOU'RE AN ART ENTHUSIAST OR JUST STARTING YOUR COLLECTION, OUR PROGRAM IS DESIGNED TO INSPIRE AND DELIGHT."
    }
  ],
  "presets": [
    {
      "name": "Custom Subscription About"
    }
  ]
}
{% endschema %}

<section class="custom-subscription-about-wrapper">
  <div class="page-width">
    <h2 class="subscription-heading">{{ section.settings.heading }}</h2>
    <p class="subscription-text">{{ section.settings.content | newline_to_br }}</p>
  </div>
</section>

<style>
  .custom-subscription-about-wrapper {
    background-color: #f5f5f0;
    padding: 40px 20px;
  }
  .subscription-heading {
    font-size: 60px;
    font-weight: 800;
    margin-bottom: 30px;
    text-transform: uppercase;
  }
  .subscription-text {
    font-size: 20px;
    font-weight: 600;
    line-height: 1.6;
    text-transform: uppercase;
  }
</style>
