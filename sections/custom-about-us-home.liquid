<style>
  .custom-nosotros-inicio-wrapper {
    padding: 40px 20px;
  }

  .custom-nosotros-inicio-text {
    font-weight: bold;
    text-transform: uppercase;
    max-width: 1000px;
    margin: 0 auto;
  }

  .custom-nosotros-inicio-text a {
    text-decoration: underline;
  }
</style>

<div
  class="custom-nosotros-inicio-wrapper"
  style="
    background-color: {{ settings.background_color }};
    text-align: {{ settings.text_align }};
  "
>
  <p
    class="custom-nosotros-inicio-text"
    style="
      color: {{ settings.text_color }};
      font-size: {{ settings.font_size }}px;
      line-height: {{ settings.line_height }};
      font-family: {{ settings.font_family }};
    "
  >
    {{ settings.description_text }}

    {% if settings.link1_text and settings.link1_url %}
      <a href="{{ settings.link1_url }}" style="color: {{ settings.text_color }};">{{ settings.link1_text }}</a>.
    {% endif %}

    {% if settings.link2_text and settings.link2_url %}
      <a href="{{ settings.link2_url }}" style="color: {{ settings.text_color }};">{{ settings.link2_text }}</a>.
    {% endif %}
  </p>
</div>

{% schema %}
{
  "name": "Custom Nosotros Inicio",
  "settings": [
    {
      "type": "text",
      "id": "description_text",
      "label": "Texto principal",
      "default": "Somos una casa de arte digital con base en Ciudad de México y Barcelona."
    },
    {
      "type": "text",
      "id": "link1_text",
      "label": "Texto del primer enlace",
      "default": "Lee nuestra historia aquí"
    },
    {
      "type": "url",
      "id": "link1_url",
      "label": "URL del primer enlace"
    },
    {
      "type": "text",
      "id": "link2_text",
      "label": "Texto del segundo enlace",
      "default": "Compra algunas de nuestras obras"
    },
    {
      "type": "url",
      "id": "link2_url",
      "label": "URL del segundo enlace"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Tamaño del texto (px)",
      "min": 16,
      "max": 48,
      "step": 2,
      "default": 24
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Altura de línea",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "default": 1.5
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Alineación del texto",
      "default": "center",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centro" },
        { "value": "right", "label": "Derecha" }
      ]
    },
    {
      "type": "select",
      "id": "font_family",
      "label": "Tipografía",
      "default": "Arial, sans-serif",
      "options": [
        { "value": "Arial, sans-serif", "label": "Arial" },
        { "value": "'Helvetica Neue', sans-serif", "label": "Helvetica Neue" },
        { "value": "'Georgia', serif", "label": "Georgia" },
        { "value": "'Courier New', monospace", "label": "Courier New" },
        { "value": "'Times New Roman', serif", "label": "Times New Roman" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Nosotros Inicio",
      "category": "Secciones personalizadas"
    }
  ]
}
{% endschema %}
