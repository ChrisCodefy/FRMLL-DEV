<div style="
  background-color: {{ section.settings.background_color }};
  color: {{ section.settings.text_color }};
  padding: 40px 20px;
  text-align: center;
  font-family: Arial, sans-serif;
">
  <p style="
    font-size: 24px;
    font-weight: bold;
    text-transform: uppercase;
    line-height: 1.5;
    max-width: 1000px;
    margin: 0 auto;
  ">
    {{ section.settings.description_text }}
  </p>
</div>

