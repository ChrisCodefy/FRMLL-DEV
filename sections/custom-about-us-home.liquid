<div style="
  background-color: {{ settings.background_color | default: '#000000' }};
  color: {{ settings.text_color | default: '#ffffff' }};
  text-align: {{ settings.text_align | default: 'center' }};
  padding: 40px 20px;
  font-family: Arial, sans-serif;
">
  <p style="
    font-size: {{ settings.font_size | default: 24 }}px;
    font-weight: bold;
    text-transform: uppercase;
    line-height: 1.5;
    max-width: 1000px;
    margin: 0 auto;
  ">
    {{ settings.description_text | default: "Somos una casa de arte digital con base en Ciudad de México y Barcelona." }}
    
    {% if settings.link1_url != blank %}
      <a href="{{ settings.link1_url }}" style="color: {{ settings.text_color }}; text-decoration: underline;">
        {{ settings.link1_text | default: "Lee nuestra historia aquí" }}
      </a>.
    {% endif %}

    {% if settings.link2_url != blank %}
      <a href="{{ settings.link2_url }}" style="color: {{ settings.text_color }}; text-decoration: underline;">
        {{ settings.link2_text | default: "Compra algunas de nuestras obras" }}
      </a>.
    {% endif %}
  </p>
</div>

{% schema %}
{
  "name": "Custom Nosotros Inicio",
  "settings": [
    {
      "type": "text",
      "id": "description_text",
      "label": "Texto principal",
      "default": "Somos una casa de arte digital con base en Ciudad de México y Barcelona."
    },
    {
      "type": "text",
      "id": "link1_text",
      "label": "Texto del primer enlace",
      "default": "Lee nuestra historia aquí"
    },
    {
      "type": "url",
      "id": "link1_url",
      "label": "URL del primer enlace"
    },
    {
      "type": "text",
      "id": "link2_text",
      "label": "Texto del segundo enlace",
      "default": "Compra algunas de nuestras obras"
    },
    {
      "type": "url",
      "id": "link2_url",
      "label": "URL del segundo enlace"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Tamaño del texto (px)",
      "min": 16,
      "max": 48,
      "step": 2,
      "default": 24
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Alineación del texto",
      "default": "center",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centro" },
        { "value": "right", "label": "Derecha" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Nosotros Inicio",
      "category": "Secciones personalizadas"
    }
  ]
}
{% endschema %}
